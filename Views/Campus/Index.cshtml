@model IEnumerable<SP23_G21_SHSMS.Models.SHSMS.Campus>

@{
    ViewData["Title"] = "Campus";
}

<h1>Campus</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CampusName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ConnectionString)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CampusName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.ConnectionString)
            </td>*@
            <td>
                @*@Html.DisplayFor(modelItem => item.Status)*@
                    @{
                        string s = item.Status == true ? "Active" : "Deactive";
                    }
                    @s
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edu.EduName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CampusId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CampusId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CampusId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
